pipeline {
    agent {
      label 'docker2'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('mydockerhub')
     registry = "srikanthyadavalli/frontend-lms"
        registryCredential = 'mydockerhub'
    }

    stages {
        

        stage('Building the docker image') {
            steps {
                sh 'cd webapp && docker build -t srikanthyadavalli/frontend-lms .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'docker push srikanthyadavalli/frontend-lms'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f srikanthyadavalli/frontend-lms'
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force fe'
                  sh 'docker run -dt -p 8000:80 --name fe srikanthyadavalli/frontend-lms'
            }
        }
    }
}
