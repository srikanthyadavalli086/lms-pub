Jenkins file 
pipeline {
    agent{
       label 'docker'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('mydockerhub')
     registry = "srikanthyadavalli/LMS-BACKEND"
        registryCredential = 'mydockerhub'
        dockerImage = ''
    }

    stages {
        
        
        stage('Building docker image') {
            steps {
                sh 'cd api && docker build -t srikanthyadavalli/LMS-BACKEND .'
            }
        }
        stage('Logging into the dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing docker image into the dockerhub') {
            steps {
                  sh 'docker push srikanthyadavalli/LMS-BACKEND'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f srikanthyadavalli/LMS-BACKEND'
            }
        }
         stage('creating database container') {
             steps {
                 sh 'docker container rm --force lmsdb'
                 sh 'docker run -d -p 5432:5432 --network lmsnetwork -e  POSTGRES_PASSWORD=password --name lmsdb postgres'
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force backend'
                  sh 'docker run -d -p 8080:8080 --network lmsnetwork -e DATABASE_URL=postgresql://postgres:password@lmsdb:5432/postgres --name backend -e PORT=8080 -e MODE=local  srikanthyadavalli/LMS-BACKEND'
            }
        }
    }
}
